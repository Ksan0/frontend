<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div class="content">
        <div class="content__title">ARCANOID</div>
        <div class="boarder">
            <table class="border__table">
                <th class="border__desk">â„–</th>
                <th class="border__desk">player</th>
                <th class="border__desk">score</th>
                <fest:for iterate="json.scores" index="i">       
                    <tr>
                        <td class="border__desk"><fest:value>i+1</fest:value></td>
                        <td class="border__desk"><fest:value>json.scores[i].name</fest:value></td> 
                        <td class="border__desk"><fest:value>json.scores[i].score</fest:value></td>
                    </tr>
                </fest:for>
            </table>
        </div>
        <a href="#main" class="content__list">Back</a>
    </div>
</fest:template>