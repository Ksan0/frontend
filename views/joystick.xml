<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
<link rel="stylesheet" type="text/css" href="css/joystick.css" />
<fest:doctype>html</fest:doctype>
<html>
    <head>
        <meta charset="utf-8" />
        <title>
            <fest:value>json.title</fest:value>
        </title>
        <meta name="viewport" content="
            initial-scale=1.0,
            user-scalable=no,
            maximum-scale=1,
            minimum-scale=1
        "/>
    </head>
    <body>
        <div class="joystick-wrapper token">
            <form>
                <input type="text" class="token-input" id="token"/>
                <button class="token-button" type="submit">OK</button>
            </form>
        </div>

        <div class="joystick-wrapper main" style="visibility: hidden">
            <div class="position-up">
                <img class="img-size" src="/css/images/arrow.png"/>
            </div>
            <div class="medium">
                <div class="position-left">
                    <img class="img-size" src="/css/images/arrow.png"/>
                </div>
                <div class="pause">
                    <img class="img-size" src="/css/images/pausebut.png"/>
                </div>
                <div class="position-right">
                    <img class="img-size" src="/css/images/arrow.png"/>
                </div>
            </div>
            <div class="position-down">
                <img class="img-size" src="/css/images/arrow.png"/>
            </div>
        </div>
        <script data-main="js/main_joystick" src="js/lib/require.js"></script>
    </body>
</html>
</fest:template>
